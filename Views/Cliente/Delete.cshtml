@model SGA_Smash.Models.Cliente

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card rounded-3">
                <div class="card-body">
                    <h4 class="card-title text-danger mb-4">¿Estás seguro de que deseas eliminar este cliente?</h4>

                    <dl class="row">
                        <dt class="col-sm-3">Nombre</dt>
                        <dd class="col-sm-9">@Model.Nombre</dd>

                        <dt class="col-sm-3">Correo</dt>
                        <dd class="col-sm-9">@Model.Correo</dd>

                        <dt class="col-sm-3">Teléfono</dt>
                        <dd class="col-sm-9">@Model.Telefono</dd>

                        <dt class="col-sm-3">Fecha de Registro</dt>
                        <dd class="col-sm-9">@Model.FechaRegistro.ToString("dd/MM/yyyy")</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger me-2">Eliminar</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>