@model SGA_Smash.Models.Cliente

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card rounded-3">
                <div class="card-body">
                    <h4 class="card-title">Editar Cliente</h4>
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label">Nombre</label>
                            <input asp-for="Nombre" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Correo" class="form-label">Correo Electrónico</label>
                            <input asp-for="Correo" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Telefono" class="form-label">Teléfono</label>
                            <input asp-for="Telefono" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="FechaRegistro" class="form-label">Fecha de Registro</label>
                            <input asp-for="FechaRegistro" type="date" class="form-control" />
                        </div>

                        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>