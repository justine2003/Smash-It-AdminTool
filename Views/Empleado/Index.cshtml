@model IEnumerable<SGA_Smash.Models.Empleado>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card rounded-3">
                <div class="card-body">
                    <div class="d-md-flex align-items-center justify-content-between">
                        <div>
                            <h4 class="card-title">Empleados Registrados</h4>
                            <p class="card-subtitle">Lista con datos demostrativos</p>
                        </div>
                        <div>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="ti ti-plus me-1"></i> Nuevo Empleado
                            </a>
                        </div>
                    </div>

                    <div class="table-responsive mt-4">
                        <table class="table mb-0 text-nowrap varient-table align-middle fs-3">
                            <thead>
                                <tr>
                                    <th class="px-0 text-muted">Nombre</th>
                                    <th class="px-0 text-muted">Puesto</th>
                                    <th class="px-0 text-muted">Salario</th>
                                    <th class="px-0 text-muted">Ingreso</th>
                                    <th class="px-0 text-muted">Estado</th>
                                    <th class="px-0 text-muted text-end">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var empleado in Model)
                                {
                                    <tr>
                                        <td class="px-0">@empleado.Nombre</td>
                                        <td class="px-0">@empleado.Puesto</td>
                                        <td class="px-0">â‚¡@empleado.SalarioBase.ToString("N0")</td>
                                        <td class="px-0">@empleado.FechaIngreso.ToString("dd/MM/yyyy")</td>
                                        <td class="px-0">
                                            @if (empleado.Estado == "Activo")
                                            {
                                                <span class="badge bg-success">Activo</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Inactivo</span>
                                            }
                                        </td>
                                        <td class="px-0 text-end">
                                            <a asp-action="Edit" asp-route-id="@empleado.Id" class="btn btn-sm btn-warning me-1">
                                                <i class="ti ti-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@empleado.Id" class="btn btn-sm btn-danger">
                                                <i class="ti ti-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>