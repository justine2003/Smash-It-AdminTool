@model SGA_Smash.Models.Producto

@{
    ViewData["Title"] = "Editar Producto";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card rounded-3">
                <div class="card-body">
                    <h4 class="card-title">Editar Producto</h4>
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label"></label>
                            <input asp-for="Nombre" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="UnidadMedida" class="form-label"></label>
                            <input asp-for="UnidadMedida" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="PrecioUnitario" class="form-label"></label>
                            <input asp-for="PrecioUnitario" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="PrecioEntregaDias" class="form-label"></label>
                            <input asp-for="PrecioEntregaDias" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="StockActual" class="form-label"></label>
                            <input asp-for="StockActual" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="MinimoStock" class="form-label"></label>
                            <input asp-for="MinimoStock" class="form-control" />
                        </div>

                        <button type="submit" class="btn btn-warning">
                            <i class="ti ti-pencil me-1"></i> Guardar Cambios
                        </button>
                        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>