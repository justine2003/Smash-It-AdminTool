@model IEnumerable<SGA_Smash.Models.Producto>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card rounded-3">
                <div class="card-body">
                    <div class="d-md-flex align-items-center justify-content-between">
                        <div>
                            <h4 class="card-title">Productos</h4>
                            <p class="card-subtitle">Lista de productos disponibles</p>
                        </div>
                        <div>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="ti ti-plus me-1"></i> Nuevo Producto
                            </a>
                        </div>
                    </div>

                    <div class="row mt-4 mb-3">
                        <div class="col-md-4">
                            <label for="categoriaFiltro" class="form-label">Filtrar por Categoría:</label>
                            <select class="form-select" id="categoriaFiltro">
                                <option value="">Todas las categorias</option>
                                @{
                                    var categoria = Model
                                    .Where(p => p.Categoria != null)
                                    .Select(p => p.Categoria.Nombre)
                                    .Distinct()
                                    .OrderBy(nombre => nombre);
                                }
                                @foreach (var categoriaNombre in categoria)
                                {
                                    <option value="@categoriaNombre">@categoriaNombre</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="table-responsive mt-4">
                        <table class="table mb-0 text-nowrap varient-table align-middle fs-3" id="productsTable">
                            <thead>
                                <tr>
                                    <th class="px-0 text-muted">Nombre</th>
                                    <th class="px-0 text-muted">Unidad</th>
                                    <th class="px-0 text-muted">Precio Unitario</th>
                                    <th class="px-0 text-muted">Entrega (días)</th>
                                    <th class="px-0 text-muted">StockActual</th>
                                    <th class="px-0 text-muted">Fecha movimiento</th>
                                    <th class="px-0 text-muted">Categoria</th>
                                    <th class="px-0 text-muted">Estado</th>
                                    <th class="px-0 text-muted text-end">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="px-0">@item.Nombre</td>
                                        <td class="px-0">@item.UnidadMedida</td>
                                        <td class="px-0">₡@item.PrecioUnitario.ToString("N2")</td>
                                        <td class="px-0">@item.PrecioEntregaDias</td>
                                        <td class="px-0">@item.StockActual</td>
                                        <th class="px-0">@item.Fecha_movimiento</th>
                                        <td class="px-0 product-category" data-category-name="@item.Categoria.Nombre">
                                            @Html.DisplayFor(modelItem => item.Categoria.Nombre)
                                        </td>
                                        <th class="px-0">@item.Estado</th>
                                        <td class="px-0 text-end">
                                            <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-1">
                                                <i class="ti ti-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">
                                                <i class="ti ti-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                                <i class="ti ti-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#categoriaFiltro').on('change', function () {
                var categoriaSeleccionada = $(this).val();

                $('#productsTable tbody tr').each(function () {
                    var categoriaFila = $(this).find('.product-category').data('category-name');

                    if (categoriaSeleccionada === '' || categoriaFila === categoriaSeleccionada) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });
            });
        });
    </script>
}