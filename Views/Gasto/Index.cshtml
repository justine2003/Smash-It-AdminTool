@model IEnumerable<SGA_Smash.Models.Gasto>

@{
    ViewData["Title"] = "Gastos";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card rounded-3">
                <div class="card-body">
                    <div class="d-md-flex align-items-center justify-content-between">
                        <div>
                            <h4 class="card-title">Gastos Registrados</h4>
                            <p class="card-subtitle">Lista de gastos demostrativos</p>
                        </div>
                        <div>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="ti ti-plus me-1"></i> Nuevo Gasto
                            </a>
                        </div>
                    </div>

                    <div class="table-responsive mt-4">
                        <table class="table mb-0 text-nowrap varient-table align-middle fs-3">
                            <thead>
                                <tr>
                                    <th class="px-0 text-muted">Tipo</th>
                                    <th class="px-0 text-muted">Monto</th>
                                    <th class="px-0 text-muted">Descripción</th>
                                    <th class="px-0 text-muted">Fecha</th>
                                    <th class="px-0 text-muted">Registrado Por</th>
                                    <th class="px-0 text-muted text-end">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var gasto in Model)
                                {
                                    <tr>
                                        <td class="px-0">@gasto.Tipo</td>
                                        <td class="px-0">₡@gasto.Monto.ToString("N0")</td>
                                        <td class="px-0">@gasto.Descripcion</td>
                                        <td class="px-0">@gasto.Fecha.ToString("dd/MM/yyyy")</td>
                                        <td class="px-0">@gasto.RegistradoPor</td>
                                        <td class="px-0 text-end">
                                            <a asp-action="Edit" asp-route-id="@gasto.Id" class="btn btn-sm btn-warning me-1">
                                                <i class="ti ti-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@gasto.Id" class="btn btn-sm btn-danger">
                                                <i class="ti ti-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>