@model SGA_Smash.Models.Gasto

@{
    ViewData["Title"] = "Nuevo Gasto";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card rounded-3">
                <div class="card-body">
                    <h4 class="card-title">Registrar Nuevo Gasto</h4>
                    <form asp-action="Create">
                        <div class="mb-3">
                            <label asp-for="Tipo" class="form-label"></label>
                            <input asp-for="Tipo" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Monto" class="form-label"></label>
                            <input asp-for="Monto" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label"></label>
                            <textarea asp-for="Descripcion" class="form-control"></textarea>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RegistradoPor" class="form-label">Registrado Por</label>
                            <select asp-for="RegistradoPor" class="form-select" asp-items="ViewBag.Empleados">
                                <option value="">Seleccione un empleado</option>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-primary">
                            <i class="ti ti-plus me-1"></i> Guardar
                        </button>
                        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>