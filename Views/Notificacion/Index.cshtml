@model List<Notificacion>

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card rounded-3">
                <div class="card-body">
                    <h4 class="card-title">Notificaciones</h4>
                    <p class="card-subtitle">Alertas recientes del sistema</p>

                    <div class="mt-3">
                        @foreach (var n in Model)
                        {
                            <div class="alert alert-light border text-dark">
                                <p class="mb-1 fw-medium">@n.Mensaje</p>
                                <small class="text-muted">@n.Fecha.ToString("dd/MM/yyyy hh:mm tt")</small>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>