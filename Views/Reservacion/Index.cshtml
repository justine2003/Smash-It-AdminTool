@model IEnumerable<SGA_Smash.Models.Reservacion>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card rounded-3">
                <div class="card-body">
                    <div class="d-md-flex align-items-center justify-content-between">
                        <div>
                            <h4 class="card-title">Reservaciones Registradas</h4>
                            <p class="card-subtitle">Lista de reservaciones activas y pasadas</p>
                        </div>
                        <div>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="ti ti-plus me-1"></i> Nueva Reservaci√≥n
                            </a>
                        </div>
                    </div>

                    <div class="table-responsive mt-4">
                        <table class="table mb-0 text-nowrap varient-table align-middle fs-3">
                            <thead>
                                <tr>
                                    <th class="px-0 text-muted">Cliente</th>
                                    <th class="px-0 text-muted">Fecha y Hora</th>
                                    <th class="px-0 text-muted">Mesa</th>
                                    <th class="px-0 text-muted">Estado</th>
                                    <th class="px-0 text-muted">Registrado por</th>
                                    <th class="px-0 text-muted text-end">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var r in Model)
                                {
                                    <tr>
                                        <td class="px-0">@r.ClienteNombre</td>
                                        <td class="px-0">@r.FechaHora.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td class="px-0">@r.Mesa</td>
                                        <td class="px-0">
                                            <span class="badge bg-@(r.Estado == "Confirmada" ? "success" : r.Estado == "Pendiente" ? "warning" : "danger")">
                                                @r.Estado
                                            </span>
                                        </td>
                                        <td class="px-0">@r.RegistradoPor</td>
                                        <td class="px-0 text-end">
                                            <a asp-action="Edit" asp-route-id="@r.Id" class="btn btn-sm btn-warning me-1">
                                                <i class="ti ti-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@r.Id" class="btn btn-sm btn-danger">
                                                <i class="ti ti-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>