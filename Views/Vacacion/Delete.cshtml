@model SGA_Smash.Models.Vacacion

@{
    ViewData["Title"] = "Eliminar Vacación";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card rounded-3 border border-danger">
                <div class="card-body">
                    <h4 class="card-title text-danger">¿Estás seguro de que deseas eliminar esta vacación?</h4>
                    <div class="mb-3">
                        <strong>Empleado:</strong> @Model.EmpleadoNombre
                    </div>
                    <div class="mb-3">
                        <strong>Desde:</strong> @Model.FechaInicio.ToString("dd/MM/yyyy")
                    </div>
                    <div class="mb-3">
                        <strong>Hasta:</strong> @Model.FechaFin.ToString("dd/MM/yyyy")
                    </div>
                    <div class="mb-3">
                        <strong>Días:</strong> @Model.Dias
                    </div>
                    <div class="mb-3">
                        <strong>Estado:</strong> @Model.Estado
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">
                            <i class="ti ti-trash me-1"></i> Eliminar
                        </button>
                        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>