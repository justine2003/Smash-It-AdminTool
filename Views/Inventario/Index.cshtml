@model IEnumerable<SGA_Smash.Models.Inventario>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card rounded-3">
                <div class="card-body">
                    <div class="d-md-flex align-items-center justify-content-between">
                        <div>
                            <h4 class="card-title">Inventario</h4>
                            <p class="card-subtitle">Lista de productos en inventario</p>
                        </div>
                        <div>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="ti ti-plus me-1"></i> Nuevo Producto
                            </a>
                        </div>
                    </div>

                    <div class="table-responsive mt-4">
                        <table class="table mb-0 text-nowrap varient-table align-middle fs-3">
                            <thead>
                                <tr>
                                    <th class="px-0 text-muted">Producto</th>
                                    <th class="px-0 text-muted">Proveedor</th>
                                    <th class="px-0 text-muted">Cantidad</th>
                                    <th class="px-0 text-muted">Ingreso</th>
                                    <th class="px-0 text-muted">Estado</th>
                                    <th class="px-0 text-muted text-end">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="px-0">@item.ProductoNombre</td>
                                        <td class="px-0">@item.ProveedorNombre</td>
                                        <td class="px-0">@item.Cantidad</td>
                                        <td class="px-0">@item.FechaIngreso.ToString("dd/MM/yyyy")</td>
                                        <td class="px-0">
                                            @if (item.Estado == "Disponible")
                                            {
                                                <span class="badge bg-success">Disponible</span>
                                            }
                                            else if (item.Estado == "En uso")
                                            {
                                                <span class="badge bg-warning">En uso</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Agotado</span>
                                            }
                                        </td>
                                        <td class="px-0 text-end">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">
                                                <i class="ti ti-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                                <i class="ti ti-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>