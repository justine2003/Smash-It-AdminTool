@model SGA_Smash.Models.Inventario

@{
    ViewData["Title"] = "Nuevo Inventario";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card rounded-3">
                <div class="card-body">
                    <h4 class="card-title">Agregar al Inventario</h4>
                    <form asp-action="Create">
                        <div class="mb-3">
                            <label asp-for="ProductoNombre" class="form-label">Producto</label>
                            <select asp-for="ProductoNombre" class="form-select" asp-items="ViewBag.Productos">
                                <option value="">Seleccione un producto</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProveedorNombre" class="form-label">Proveedor</label>
                            <select asp-for="ProveedorNombre" class="form-select" asp-items="ViewBag.Proveedores">
                                <option value="">Seleccione un proveedor</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Cantidad" class="form-label"></label>
                            <input asp-for="Cantidad" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Estado" class="form-label"></label>
                            <input asp-for="Estado" class="form-control" />
                        </div>

                        <button type="submit" class="btn btn-primary">
                            <i class="ti ti-plus me-1"></i> Guardar
                        </button>
                        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>