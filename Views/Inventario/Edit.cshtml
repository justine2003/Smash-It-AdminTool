@model SGA_Smash.Models.Inventario

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card rounded-3">
                <div class="card-body">
                    <h4 class="card-title mb-4">Editar registro de inventario</h4>

                    <form asp-action="Edit">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="ProductoNombre" class="form-label">Producto</label>
                            <input asp-for="ProductoNombre" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProveedorNombre" class="form-label">Proveedor</label>
                            <input asp-for="ProveedorNombre" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Cantidad" class="form-label">Cantidad</label>
                            <input asp-for="Cantidad" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="FechaIngreso" class="form-label">Fecha de Ingreso</label>
                            <input asp-for="FechaIngreso" class="form-control" type="date" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Estado" class="form-label">Estado</label>
                            <select asp-for="Estado" class="form-select">
                                <option value="Disponible">Disponible</option>
                                <option value="En uso">En uso</option>
                                <option value="Agotado">Agotado</option>
                            </select>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                            <button type="submit" class="btn btn-warning">
                                <i class="ti ti-pencil me-1"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>