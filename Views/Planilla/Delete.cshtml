@model SGA_Smash.Models.Planilla
@using System.Globalization
@{
    ViewData["Title"] = "Eliminar Planilla";
    var esCR = new CultureInfo("es-CR");
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card border-danger rounded-3">
                <div class="card-body">
                    <h4 class="card-title text-danger">¿Eliminar esta planilla?</h4>
                    <p class="mb-4">Esta acción no se puede deshacer. Revisa la información antes de confirmar.</p>

                    <dl class="row">
                        <dt class="col-sm-3">Empleado</dt>
                        <dd class="col-sm-9">@((Model.Empleado?.Nombre) ?? $"Empleado #{Model.EmpleadoId}")</dd>

                        <dt class="col-sm-3">Periodo</dt>
                        <dd class="col-sm-9">@($"{Model.Mes:D2}/{Model.Anio}")</dd>

                        <dt class="col-sm-3">Salario Base</dt>
                        <dd class="col-sm-9">@($"₡{Model.SalarioBase.ToString("N0", esCR)}")</dd>

                        <dt class="col-sm-3">Deducciones</dt>
                        <dd class="col-sm-9">@($"₡{Model.Deducciones.ToString("N0", esCR)}")</dd>

                        <dt class="col-sm-3">Bonificaciones</dt>
                        <dd class="col-sm-9">@($"₡{Model.Bonificaciones.ToString("N0", esCR)}")</dd>

                        <dt class="col-sm-3">Total Pago</dt>
                        <dd class="col-sm-9 fw-semibold">@($"₡{Model.TotalPago.ToString("N0", esCR)}")</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-danger">
                                <i class="ti ti-trash me-1"></i> Eliminar
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
