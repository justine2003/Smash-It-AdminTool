@model IEnumerable<SGA_Smash.Models.Planilla>

@{
    ViewData["Title"] = "Planilla";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card rounded-3">
                <div class="card-body">
                    <div class="d-md-flex align-items-center justify-content-between">
                        <div>
                            <h4 class="card-title">Planilla de Pagos</h4>
                            <p class="card-subtitle">Lista de pagos realizados a los empleados</p>
                        </div>
                        <div>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="ti ti-plus me-1"></i> Nueva Planilla
                            </a>
                        </div>
                    </div>

                    <div class="table-responsive mt-4">
                        <table class="table mb-0 text-nowrap varient-table align-middle fs-3">
                            <thead>
                                <tr>
                                    <th class="px-0 text-muted">Empleado</th>
                                    <th class="px-0 text-muted">Salario Base</th>
                                    <th class="px-0 text-muted">Deducciones</th>
                                    <th class="px-0 text-muted">Bonificaciones</th>
                                    <th class="px-0 text-muted">Total Pago</th>
                                    <th class="px-0 text-muted">Fecha de Pago</th>
                                    <th class="px-0 text-muted text-end">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="px-0">@item.EmpleadoNombre</td>
                                        <td class="px-0">₡@item.SalarioBase.ToString("N0")</td>
                                        <td class="px-0">₡@item.Deducciones.ToString("N0")</td>
                                        <td class="px-0">₡@item.Bonificaciones.ToString("N0")</td>
                                        <td class="px-0">₡@item.TotalPago.ToString("N0")</td>
                                        <td class="px-0">@item.FechaPago.ToString("dd/MM/yyyy")</td>
                                        <td class="px-0 text-end">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">
                                                <i class="ti ti-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                                <i class="ti ti-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>