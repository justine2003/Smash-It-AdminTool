@model IEnumerable<SGA_Smash.Models.Planilla>
@using System.Globalization
@{
    ViewData["Title"] = "Planillas";
    var esCR = new CultureInfo("es-CR");
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Planillas</h3>
            <a asp-action="Create" class="btn btn-primary">
                <i class="ti ti-plus me-1"></i> Nueva Planilla
            </a>
        </div>
    </div>

    @{
        var success = TempData["Success"] as string;
    }
    @if (!string.IsNullOrWhiteSpace(success))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @success
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="card rounded-3">
            <div class="card-body text-center py-5">
                <h5 class="mb-2">Aún no hay planillas registradas</h5>
                <p class="text-muted mb-4">Crea tu primera planilla para comenzar.</p>
                <a asp-action="Create" class="btn btn-outline-primary">
                    <i class="ti ti-plus me-1"></i> Crear planilla
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="card rounded-3">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Empleado</th>
                                <th class="text-end">Salario Base</th>
                                <th class="text-end">Deducciones</th>
                                <th class="text-end">Bonificaciones</th>
                                <th class="text-end">Total Pago</th>
                                <th class="text-center">Periodo</th>
                                <th class="text-center" style="width: 170px;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody class="text-secondary">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@(item.Empleado?.Nombre ?? $"Empleado #{item.EmpleadoId}")</td>
                                <td class="text-end">@($"₡{item.SalarioBase.ToString("N0", esCR)}")</td>
                                <td class="text-end">@($"₡{item.Deducciones.ToString("N0", esCR)}")</td>
                                <td class="text-end">@($"₡{item.Bonificaciones.ToString("N0", esCR)}")</td>
                                <td class="text-end fw-semibold">@($"₡{item.TotalPago.ToString("N0", esCR)}")</td>
                                <td class="text-center">@($"{item.Mes:D2}/{item.Anio}")</td>
                                <td class="text-center text-nowrap">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm px-2 py-1 me-2 d-inline-flex align-items-center rounded-3">
                                        <i class="ti ti-pencil"></i><span class="ms-1">Editar</span>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm px-2 py-1 d-inline-flex align-items-center rounded-3">
                                        <i class="ti ti-trash"></i><span class="ms-1">Eliminar</span>
                                    </a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
