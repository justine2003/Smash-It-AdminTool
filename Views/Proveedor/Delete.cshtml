@model SGA_Smash.Models.Proveedor

<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-lg-6 mx-auto">
            <div class="card rounded-3">
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }

                    <div class="text-center mb-4">
                        <i class="ti ti-alert-triangle text-warning" style="font-size: 4rem;"></i>
                        <h4 class="card-title mt-3">¿Eliminar Proveedor?</h4>
                        <p class="text-muted">Esta acción no se puede deshacer.</p>
                    </div>

                    <div class="alert alert-warning">
                        <h6><i class="ti ti-info-circle me-2"></i>Información del Proveedor</h6>
                        <hr>
                        <div class="row">
                            <div class="col-sm-4"><strong>Nombre:</strong></div>
                            <div class="col-sm-8">@Model.Nombre</div>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Contacto))
                        {
                            <div class="row mt-2">
                                <div class="col-sm-4"><strong>Contacto:</strong></div>
                                <div class="col-sm-8">@Model.Contacto</div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.Telefono))
                        {
                            <div class="row mt-2">
                                <div class="col-sm-4"><strong>Teléfono:</strong></div>
                                <div class="col-sm-8">@Model.Telefono</div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.Correo))
                        {
                            <div class="row mt-2">
                                <div class="col-sm-4"><strong>Correo:</strong></div>
                                <div class="col-sm-8">@Model.Correo</div>
                            </div>
                        }
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-center gap-2">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="ti ti-x me-1"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="ti ti-trash me-1"></i> Eliminar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>