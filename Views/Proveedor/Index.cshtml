@model IEnumerable<SGA_Smash.Models.Proveedor>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card rounded-3">
                <div class="card-body">
                    <div class="d-md-flex align-items-center justify-content-between">
                        <div>
                            <h4 class="card-title">Proveedores Registrados</h4>
                            <p class="card-subtitle">Lista de proveedores del sistema</p>
                        </div>
                        <div>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="ti ti-plus me-1"></i> Nuevo Proveedor
                            </a>
                        </div>
                    </div>

                    <div class="table-responsive mt-4">
                        <table class="table mb-0 text-nowrap varient-table align-middle fs-3">
                            <thead>
                                <tr>
                                    <th class="px-0 text-muted">Nombre</th>
                                    <th class="px-0 text-muted">Contacto</th>
                                    <th class="px-0 text-muted">Tel√©fono</th>
                                    <th class="px-0 text-muted">Correo</th>
                                    <th class="px-0 text-muted text-end">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var proveedor in Model)
                                {
                                    <tr>
                                        <td class="px-0">@proveedor.Nombre</td>
                                        <td class="px-0">@proveedor.Contacto</td>
                                        <td class="px-0">@proveedor.Telefono</td>
                                        <td class="px-0">@proveedor.Correo</td>
                                        <td class="px-0 text-end">
                                            <a asp-action="Edit" asp-route-id="@proveedor.Id" class="btn btn-sm btn-warning me-1">
                                                <i class="ti ti-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@proveedor.Id" class="btn btn-sm btn-danger">
                                                <i class="ti ti-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>